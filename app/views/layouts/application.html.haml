    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title
      Comunidad de Estudiantes
      de Ingenieria de Sistemas
    = javascript_include_tag "prototype.js", "jquery.min.js", "jquery.tools.min.js", "jquery.ui.min.js", "jquery.prettyPhoto.js", :cache => true
    = stylesheet_link_tag "event_calendar", "prettyPhoto", "eafit","curriculovivo.css", "theme/slide_show.css", 'forum', :cache => true
    = javascript_include_tag "application"
    = javascript_include_tag "forum.js","effects.js","lightbox.js" , :plugin => "community_engine", :cache => "comengine"
    = javascript_include_tag "flowplayer-3.1.4.min"
    -# = javascript_include_tag "admin" if current_user and current_user.admin?
    = javascript_include_tiny_mce_if_used
    -# = tiny_mce if using_tiny_mce?
    -# = javascript_include_tag "AC_RunActiveContent", :plugin => "community_engine" if current_page?(:controller => 'photos', :action => 'new') or current_page?(:controller => 'statistics', :action => 'index')
    = yield(:head)
    -# - unless current_user
    -#   - unless current_page?(login_path)
    -#     %noscript
    -#       %meta{:content => "2;url=#{login_url}", "http-equiv" => "refresh"}
    /[if gte IE 5]
      <haml:loud> stylesheet_link_tag 'ie' </haml:loud>
    /[if lte IE 7]
      <haml:loud> stylesheet_link_tag 'ie67' </haml:loud>
    /[if (gte IE 6)&(lte IE 8)]
      <haml:loud> javascript_include_tag 'selectivizr' </haml:loud>
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-20097505-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

