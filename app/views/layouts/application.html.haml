        #header
          #logo
          #search
            - form_for :search, :url =>{ :controller => :search, :action => :simple}, :method => :get do |f|
              %table
                %tr
                  %td= text_field_tag :search, params[:search]
                  %td= f.submit "Buscar", :name => nil
