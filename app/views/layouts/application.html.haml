            - unless flash[:notice].nil?
              .notice.alert
                = flash[:notice]
                %a.close_alert{:href => "#"} cerrar
            - unless flash[:warning].nil?
              .warning.alert
                = flash[:warning]
                %a.close_alert{:href => "#"} cerrar
            - unless flash[:error].nil?
              .error.alert
                = flash[:error]
                %a.close_alert{:href => "#"} cerrar
          / end of flash-messages
          .yui-b.sidebar
            = render :partial => 'shared/admin_nav'
